<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <!-- Close Icon -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="12dp"
        android:src="@drawable/close_btn" />

    <!-- Membership Activation Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Membership Icon -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/contact_icon" />

        <!-- Membership Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/activate_member"
            android:textColor="#333333"
            android:textSize="24sp" />

        <!-- Membership Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/membership_description"
            android:textColor="#666666"
            android:textSize="16sp" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Square 1 -->
            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/selector_square"
                android:button="@null"
                android:text="￥4/7天"
                android:textAlignment="center"
                android:textColor="@color/selector_text_color"
                android:textSize="20sp"
                android:checked="false"/>

            <!-- Square 2 -->
            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/selector_square"
                android:button="@null"
                android:text="￥9.9/30天"
                android:textAlignment="center"
                android:textColor="@color/selector_text_color"
                android:textSize="20sp"
                android:checked="true"/>

            <!-- Square 3 -->
            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@drawable/selector_square"
                android:button="@null"
                android:text="￥199/永久"
                android:textAlignment="center"
                android:textColor="@color/selector_text_color"
                android:textSize="20sp"
                android:checked="false"/>
        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#FF5722"
            android:text="@string/activate_now"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>
